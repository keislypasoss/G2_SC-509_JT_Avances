<h2 class="my-4 text-center">Lista de Personal</h2>

<div class="d-flex justify-content-end mb-3">
  <a href="/personal/nuevo" class="btn btn-primary">Agregar nuevo</a>
</div>

<table class="table table-bordered table-striped">
  <thead class="table-dark">
    <tr>
      <th>ID (Cédula)</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Género</th>
      <th>Puesto</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% personal.forEach(p => { %>
      <tr>
        <td><%= p.id %></td>
        <td><%= p.nombre %></td>
        <td><%= p.apellido %></td>
        <td><%= p.genero %></td>
        <td><%= p.puesto %></td>
        <td>
          <a href="/personal/editar/<%= p._id %>" class="btn btn-sm btn-warning">Editar</a>
          <form action="/personal/eliminar/<%= p._id %>" method="POST" class="d-inline">
            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
